class Solution {
public:
    int numberOfMatches(int n) {
     int total=0;
     while(n>1)
     {
     if(n%2!=0)
     {
        int adv=0;
        total+=((n-1)/2);
        adv+=((n-1)/2+1);
        n=adv;
     }
     else
     {
        int adv=0;
        total+=(n/2);
        adv+=(n/2);
        n=adv;
     }
     }
     return total;
    }
};


OUTPUT:
Input: n = 7
Output: 6
